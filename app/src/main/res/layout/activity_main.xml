<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

    <TextView
            android:text="Item type:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="@android:color/background_dark"
            android:id="@+id/itemTypeTxt"
            android:textAllCaps="false"/>
    <Spinner
            android:layout_width="253dp"
            android:layout_height="29dp"
            android:id="@+id/itemTypeSpinner"/>
    <TextView
            android:text="Item:"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemTxt"/>
    <Spinner
            android:layout_width="253dp"
            android:layout_height="29dp"
            android:id="@+id/selectedItemSpinner"/>



    <LinearLayout
            android:id="@+id/viewWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include
                android:id="@+id/meleeViewWindow"
                layout = "@layout/melee_layout"
        />

        <include
            android:id="@+id/armorViewWindow"
            layout = "@layout/armor_layout"
            />

        <include
            android:id="@+id/crossbowViewWindow"
            layout= "@layout/crossbow_layout"
            />

    </LinearLayout>


</LinearLayout>